@model TelefonRehberi.Dto.Account.LoginModel
@{
    ViewBag.Title = "Admin Giriş";
}
@{
    TelefonRehberi.Entity.Admin logonAdmin = (TelefonRehberi.Entity.Admin)Session["LogonAdmin"];
}
<div class="row ">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 " style="margin-top:40px;">
        @if (logonAdmin == null)
    {
        using (Html.BeginForm())
        {

            <div class="panel panel-success ">
                <div class="panel-heading text-center">
                    <h2 class="text-info">Login</h2>
                    @if (ViewBag.error != null && string.IsNullOrEmpty((string)ViewBag.error) == false)
                {
                    <small style="color:red;">@ViewBag.error</small>
            }
            else
            {
                <small>Lütfen Kullanıcı Adınızı ve Parolanızı giriniz</small>
        }
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <center>
                            <img src="~/images/account.png" class="img-circle img-responsive" style="width:125px" />
                        </center>
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.admin.username, new { @class = "form-control", maxlength = "50", required = "required", placeholder = "UserName" })


                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.admin.password, new { @class = "form-control", maxlength = "50", placeholder = "Password", type = "password" })
                    </div>

                </div>
                <div class="panel-footer panel-success text-right ">
                    <a class="btn btn-primary" href="~/Home/Index">Anasayfa</a>

                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-log-in"></span> Login
                    </button>

                </div>
            </div>
    }

}
else
{
    <div class="row">
        <div class="col-md-12 text-center" style="margin-top:20px;">
            Zaten Giriş Yaptınız! Ana Sayfaya yönlendiriliyorsunuz!
        </div>
    </div>
    <meta http-equiv="Refresh" content="1;url=../Home" />




}
    </div>
</div>

