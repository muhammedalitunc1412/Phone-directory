@model TelefonRehberi.Dto.Account.PersonelModel
@{
    ViewBag.Title = "Profile";
}
@{
    TelefonRehberi.Entity.Admin logonAdmin = (TelefonRehberi.Entity.Admin)Session["LogonAdmin"];
}
<h2>Profile</h2>
<h4>@ViewBag.Info</h4>
@{
    ViewBag.Title = string.Format("{0} {1}", Model.calisan.ad, Model.calisan.soyad);
  
}



<div class="row" style="font-size:12pt;">
    <div class="col-md-3">
        <center><img src="~/images/300x150.png" style="width:200px; height:200px;" class="img-circle img-responsive img-thumbnail" /></center>

    </div>
    <div class="col-md-9 " style="font-size:13pt;">

        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.calisan.ad, "Adı", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.calisan.ad, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.calisan.soyad, "Soyadı", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.calisan.soyad, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.calisan.telefon, "Telefon", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.calisan.telefon, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.adi, "Departman", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.adi, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.yoneticiAdSoyad, "Yönetici", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.yoneticiAdSoyad, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

     
    </div>
    @if (logonAdmin == null)
    {
        <div class="row">
            <div class="col-md-12 text-center" style="margin-top:20px;">
                Bilgileri Güncellemek için <a href="~/Account/Login" style="font-weight:bold">Admin</a> olarak giriş yapabilirsiniz!
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-10 col-md-offset-1 text-center">
                <a href="~/Account/ProfileEdit/@Model.calisan.id" class="btn btn-warning " style="margin-right:10px;">
                    <span class="glyphicon glyphicon-edit"></span> Düzenle
                </a>

                <a type="button" onclick="Delete('@Url.Action("Delete","Account", new { id = Model.calisan.id })')" class="btn btn-danger btn">
                    <span class="glyphicon glyphicon-trash"></span> Sil
                </a>
            </div>
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
    }
</div>






@if (TempData["resultInfo"] != null)
{


    @Html.Partial("InfoModal");

    <script>
        $('#exampleModalCenter').modal('show');
    </script>
}
@Html.Partial("ResultControl", "Silmek istediğinize emin misiniz?")



