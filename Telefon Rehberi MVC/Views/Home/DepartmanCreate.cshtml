@model TelefonRehberi.Entity.Departmanlar


@{
    /**/

    ViewBag.Title = "New Department";
}


<h2>Yeni Departman </h2>
<hr />

@using (Html.BeginForm("DepartmanCreate", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{



    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-offset-2">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class=" form-group">
            <div class="col-md-2 ">
                @Html.LabelFor(model => model.adi, "Departman Adı", htmlAttributes: new { @class = "control-label " })
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.adi, new { htmlAttributes = new { @class = "form-control", maxlength = "50", required = "required" } })
                @Html.ValidationMessageFor(model => model.adi, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-info" />
            </div>
        </div>
    </div>
}


@if (TempData["resultInfo"] != null)
{


    @Html.Partial("InfoModal");

    <script>
        $('#exampleModalCenter').modal('show');
    </script>
}


